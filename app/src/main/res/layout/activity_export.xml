<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvExportHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingBottom="10dp"
        android:text="ðŸ“¤ Export and Integrations"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnExportEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export via Email" />

    <Button
        android:id="@+id/btnExportCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to Google Calendar"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnExportTrello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to Notion / Trello"
        android:layout_marginTop="10dp" />
</LinearLayout>
